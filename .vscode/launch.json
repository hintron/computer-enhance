{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "RTOS simulator release-with-debug",
            "cargo": {
                "args": [
                    "build",
                    "--profile=release-with-debug",
                    "--bin=emu86rs",
                    "--package=emu86rs"
                ],
                "filter": {
                    "name": "emu86rs",
                    "kind": "bin"
                }
            },
            "args": [
                "${env:HOME}/code/artoss/labs/lab8/artoss.bin",
                "rtos-debug.log",
                "--verbose",
                "--exec",
                "--model-cycles",
                "8086",
                "--ip",
                "0x100",
                "--sp",
                "0xFFFE",
                "--exit-after",
                "10000"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}