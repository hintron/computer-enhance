{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "RTOS simulator release-with-debug",
            "cargo": {
                "args": [
                    "build",
                    "--profile=release-with-debug",
                    "--bin=emu86rs",
                    "--package=emu86rs"
                ],
                "filter": {
                    "name": "emu86rs",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/emu86rs/files/bin86/artoss.bin",
                "rtos-debug.log",
                "--verbose",
                "--model-cycles",
                "8086",
                "--ip",
                "0x100",
                "--sp",
                "0xFFFE",
                "--display-window",
                "--exit-after",
                "10000"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Snake debug",
            "cargo": {
                "args": [
                    "build",
                    "--profile=release-with-debug",
                    "--bin=emu86rs",
                    "--package=emu86rs"
                ],
                "filter": {
                    "name": "emu86rs",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/emu86rs/files/bin86/snake",
                "snake-debug.log",
                "--display-window",
                "--stop-on-int3",
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}